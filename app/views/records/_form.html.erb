<%= stylesheet_link_tag  'scaffolds', media: 'all', 'data-turbolinks-track' => true %>
<%= form_for(@record) do |f| %>
  <% if @record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
      <% @record.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :DATE_EMISSION %><br>
    <%= f.date_select :DATE_EMISSION, {:order => [:day, :month, :year], :use_month_numbers => true}%>
  </div>
  <div class="field">
    <%= f.label :ACCOUNT_id %><br>
    <%= f.select(:account_id, Account.all.collect {|p| [ p.BANK, p.id ]}, {include_blank: 'Não Definido'}) %>
  </div>
  <div class="field">
    <%= f.label :FINANCIAL_OP_TYPE %><br>
    <%= f.text_field :FINANCIAL_OP_TYPE %>
  </div>
  <div class="field">
    <%= f.label :COEF %><br>
    <%= f.text_field :COEF %>
  </div>
  <div class="field">
    <%= f.label :VALUE_FINANCED %><br>
    <%= f.text_field :VALUE_FINANCED %>
  </div>
  <div class="field">
    <%= f.label :QT_PORTION %><br>
    <%= f.text_field :QT_PORTION %>
  </div>
  <div class="field">
    <%= f.label :VALUE_PORTION %><br>
    <%= f.text_field :VALUE_PORTION %>
  </div>
  <div class="field">
    <%= f.label :VALUE_TOTAL? %><br>
    <%= f.text_field :VALUE_TOTAL? %>
  </div>
  <div class="field">
    <%= f.label :CUSTOMERPROVIDER_id %><br>
    <%= f.select(:customerprovider_id, Customerprovider.all.collect {|p| [ p.NAME, p.id ]}, {include_blank: 'Não Definido'}) %>
  </div>
  <div class="field">
    <%= f.label :CAR_id %><br>
    <%= f.text_field :car_id %>
  </div>
  <div class="field">
    <%= f.label :PAYMENT_METHOD_id %><br>
    <%= f.text_field :payment_method_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
