<%= stylesheet_link_tag  'scaffolds', media: 'all', 'data-turbolinks-track' => true %>
<h1>Listing Records</h1>

<table>
  <thead>
    <tr>
      <th>Date emission</th>
      <th>User</th>
      <th>Account</th>
      <th>Financial op type</th>
      <th>Coef</th>
      <th>Value financed</th>
      <th>Qt portion</th>
      <th>Value portion</th>
      <th>Value total?</th>
      <th>Customerprovider</th>
      <th>Car</th>
      <th>Payment method</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.DATE_EMISSION %></td>
        <td><%= record.USER %></td>
        <td><%= record.ACCOUNT %></td>
        <td><%= record.FINANCIAL_OP_TYPE %></td>
        <td><%= record.COEF %></td>
        <td><%= record.VALUE_FINANCED %></td>
        <td><%= record.QT_PORTION %></td>
        <td><%= record.VALUE_PORTION %></td>
        <td><%= record.VALUE_TOTAL? %></td>
        <td><%= record.CUSTOMERPROVIDER %></td>
        <td><%= record.CAR %></td>
        <td><%= record.PAYMENT_METHOD %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Record', new_record_path %>
